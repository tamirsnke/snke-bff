# Environment Configuration
NODE_ENV=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
SSL_ENABLED=false
SSL_KEY_PATH=./certs/server-key.pem
SSL_CERT_PATH=./certs/server-cert.pem
SSL_CA_PATH=./certs/ca-cert.pem

# Database Configuration
DATABASE_URL=postgresql://bff_user:bff_password@localhost:5432/bff_db
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false
SESSION_STORE=redis

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=myrealm
KEYCLOAK_CLIENT_ID=myclient
KEYCLOAK_CLIENT_SECRET=your_client_secret_here_replace_this

# Security Configuration
SESSION_SECRET=your_session_secret_here_make_it_long_and_random_replace_this
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random_replace_this
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=["http://localhost:3000", "http://localhost:8080"]
CORS_CREDENTIALS=true

# Monitoring Configuration
METRICS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
SENTRY_DSN=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=true

# Feature Flags
FEATURE_HEALTH_CHECK=true
FEATURE_METRICS=true
FEATURE_TRACING=true
FEATURE_API_DOCS=true

# External Service URLs
MICROSERVICE_USER_URL=http://localhost:3001
MICROSERVICE_ORDER_URL=http://localhost:3002
MICROSERVICE_INVENTORY_URL=http://localhost:3003

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Frontend URL
FRONTEND_URL=http://localhost:3000
